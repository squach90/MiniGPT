{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MiniGPT",
  "version": "0.1.0",
  "identifier": "com.minigpt.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "MiniGPT",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.icns"]
  }
}
